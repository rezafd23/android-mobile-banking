<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <size android:width="80dp" android:height="80dp"/>
                    <stroke android:width="2dp" android:color="@color/colorStroke" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="oval">
                    <size android:width="80dp" android:height="80dp"/>
                    <solid android:color="@color/colorWhiteTint" />
                </shape>
            </item>
            <item android:top="15dp" android:left="15dp" android:right="15dp" android:bottom="15dp">
                <shape android:shape="oval" >
                    <size android:width="80dp" android:height="80dp"/>
                    <stroke android:width="1dp" android:color="#77000000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <size android:width="80dp" android:height="80dp"/>
                    <stroke android:width="2dp" android:color="@color/colorStroke" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="oval">
                    <size android:width="80dp" android:height="80dp"/>
                    <solid android:color="#339c9c9c" />
                </shape>
            </item>
            <item android:top="15dp" android:left="15dp" android:right="15dp" android:bottom="15dp">
                <shape android:shape="oval" >
                    <size android:width="80dp" android:height="80dp"/>
                    <stroke android:width="1dp" android:color="#77000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <size android:width="80dp" android:height="80dp"/>
                    <stroke android:width="2dp" android:color="@color/colorStroke" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="oval">
                    <size android:width="80dp" android:height="80dp"/>
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp">
                <shape android:shape="oval" >
                    <size android:width="80dp" android:height="80dp"/>
                    <stroke android:width="1dp" android:color="#77000000" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>