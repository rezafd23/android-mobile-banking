<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ApplyPersonalDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_20"
            android:text="Data Pribadi"
            android:fontFamily="@font/rubik"
            android:textColor="@color/black"
            android:textSize="@dimen/text_extra_large"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_simpan"
        android:background="@color/white">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pad_20"
            android:paddingRight="@dimen/pad_20"
            android:paddingBottom="@dimen/pad_20"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_diri"
                android:layout_marginTop="@dimen/pad_24"
                android:alpha="0.8"
                android:fontFamily="@font/rubik"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xs_20"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/apply_desc"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/text_xs_14" />

            <com.example.android_mobile_banking.widget.CustomTextInputLayout
                android:id="@+id/input_ektp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_15"
                android:hint="No KTP"
                app:errorTextAppearance="@style/MyErrorText"
                android:layout_marginBottom="15dp"
                style="@style/EditTextLayoutApply">
                <com.xw.repo.XEditText
                    android:id="@+id/et_ektp"
                    android:layout_width="match_parent"
                    android:inputType="phone"
                    android:textColorHint="@color/colorLightGrey"
                    android:layout_height="56dp"
                    android:maxLength="16"
                    android:gravity="bottom"
                    style="@style/EditTextLayoutApply"
                    android:nextFocusDown="@+id/et_nama"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edit_bg_selector"
                    android:fontFamily="@font/opensans_regular"/>
            </com.example.android_mobile_banking.widget.CustomTextInputLayout>

            <com.example.android_mobile_banking.widget.CustomTextInputLayout
                android:id="@+id/input_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_15"
                android:hint="Nama Sesuai KTP"
                app:errorTextAppearance="@style/MyErrorText"
                android:layout_marginBottom="15dp"
                style="@style/EditTextLayoutApply">
                <com.xw.repo.XEditText
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/colorLightGrey"
                    android:layout_height="56dp"
                    android:gravity="bottom"
                    style="@style/EditTextLayoutApply"
                    android:nextFocusDown="@+id/et_email"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edit_bg_selector"
                    android:fontFamily="@font/opensans_regular"/>
            </com.example.android_mobile_banking.widget.CustomTextInputLayout>

            <com.example.android_mobile_banking.widget.CustomTextInputLayout
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_10"
                app:errorTextAppearance="@style/MyErrorText"
                android:layout_marginBottom="15dp"
                android:hint="Email"
                style="@style/EditTextLayoutApply">
                <com.xw.repo.XEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/colorLightGrey"
                    android:layout_height="56dp"
                    android:gravity="bottom"
                    style="@style/EditTextLayoutApply"
                    android:nextFocusDown="@+id/sp_pendidikan"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edit_bg_selector"
                    android:fontFamily="@font/opensans_regular"/>

            </com.example.android_mobile_banking.widget.CustomTextInputLayout>

            <com.example.android_mobile_banking.widget.CustomSpinner
                android:id="@+id/sp_pendidikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/sp_status_perkawinan"
                app:ms_hint="Pendidikan Terakhir"/>

            <com.example.android_mobile_banking.widget.CustomSpinner
                android:id="@+id/sp_status_perkawinan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/input_alamat"
                android:imeOptions="actionNext"
                app:ms_hint="Status Perkawinan"
                android:layout_marginBottom="@dimen/pad_10"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_medium_margin"
                android:alpha="0.8"
                android:fontFamily="@font/rubik"
                android:text="@string/data_home"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xs_20"
                android:textStyle="bold"/>

            <com.example.android_mobile_banking.widget.CustomTextInputLayout
                android:id="@+id/input_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_10"
                android:layout_marginBottom="@dimen/pad_10"
                android:hint="Alamat Lengkap"
                app:counterMaxLength="80"
                app:errorTextAppearance="@style/MyErrorText"
                style="@style/EditTextLayoutApply">

                <com.xw.repo.XEditText
                    android:id="@+id/et_alamat"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:textColorHint="@color/colorLightGrey"
                    android:layout_height="56dp"
                    android:maxLength="80"
                    android:gravity="bottom"
                    style="@style/EditTextLayoutApply"
                    android:nextFocusDown="@+id/et_pengeluaran"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edit_bg_selector"
                    android:fontFamily="@font/opensans_regular"/>
            </com.example.android_mobile_banking.widget.CustomTextInputLayout>

            <com.example.android_mobile_banking.widget.CustomSpinner
                android:id="@+id/sp_provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/sp_kabupaten"
                app:ms_hint="Provinsi" />

            <com.example.android_mobile_banking.widget.CustomSpinner
                android:id="@+id/sp_kabupaten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/sp_kecamatan"
                app:ms_hint="Kabupaten atau Kota" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/pad_10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android_mobile_banking.widget.CustomSpinner
                        android:id="@+id/sp_kecamatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/sp_kelurahan"
                        app:ms_hint="Kecamatan" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp">

                    <com.example.android_mobile_banking.widget.CustomSpinner
                        android:id="@+id/sp_kelurahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/et_rt_rw"
                        app:ms_hint="Kelurahan" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.example.android_mobile_banking.widget.CustomTextInputLayout
                android:id="@+id/input_rt_rw"
                style="@style/EditTextLayoutApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_10"
                android:layout_marginBottom="@dimen/pad_15"
                android:hint="RT/RW"
                app:errorTextAppearance="@style/MyErrorText">

                <com.xw.repo.XEditText
                    android:id="@+id/et_rt_rw"
                    android:layout_width="match_parent"
                    android:inputType="phone"
                    android:textColorHint="@color/colorLightGrey"
                    android:layout_height="56dp"
                    android:gravity="bottom"
                    style="@style/EditTextLayoutApply"
                    android:nextFocusDown="@+id/et_pengeluaran"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edit_bg_selector"
                    android:fontFamily="@font/opensans_regular"/>
            </com.example.android_mobile_banking.widget.CustomTextInputLayout>

            <com.example.android_mobile_banking.widget.CustomSpinner
                android:id="@+id/sp_status_rumah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                app:ms_hint="Status Rumah Tinggal" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_56"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_primary_full"
        android:text="@string/btnSimpan"
        android:enabled="false"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</RelativeLayout>