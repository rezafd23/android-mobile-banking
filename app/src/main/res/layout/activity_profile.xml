                   android:background="@color/colorDarkGrey"
                   android:layout_marginStart="@dimen/pad_10"
                   android:layout_marginEnd="@dimen/pad_10"
                   android:layout_marginBottom="@dimen/pad_10"/>

           </androidx.appcompat.widget.LinearLayoutCompat>

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Data Kartu"
               android:layout_marginEnd="@dimen/pad_20"
               android:layout_marginTop="@dimen/pad_20"
               android:layout_marginStart="@dimen/pad_20"
               />
           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white"
               android:paddingTop="@dimen/pad_5"
               android:layout_marginStart="@dimen/pad_20"
               android:layout_marginBottom="@dimen/pad_20"
               android:layout_marginEnd="@dimen/pad_20">
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/pad_10"
                   android:layout_marginBottom="@dimen/pad_10"
                   android:paddingTop="@dimen/pad_10"
                   android:paddingBottom="@dimen/pad_10"
                   android:layout_marginEnd="@dimen/pad_10"
                   android:orientation="horizontal">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:text="Nomor Kartu: "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/opensans_regular"
                       android:textSize="@dimen/text_xs_16"/>
