                   android:layout_height="1dp"
                   android:background="@color/colorDarkGrey"
                   android:layout_marginStart="@dimen/pad_10"
                   android:layout_marginEnd="@dimen/pad_10"
                   android:layout_marginBottom="@dimen/pad_10"/>
