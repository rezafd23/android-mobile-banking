                   <androidx.appcompat.widget.AppCompatTextView
                       android:text="No Rekening: "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:fontFamily="@font/opensans_regular"
                       android:textSize="@dimen/text_xs_16"/>
                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tv_no_rekening"
                       android:text="0001002"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/opensans_regular"
                       android:textSize="@dimen/text_xs_16"/>
               </androidx.appcompat.widget.LinearLayoutCompat>

           </androidx.appcompat.widget.LinearLayoutCompat>


           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Data Diri"
               android:layout_marginEnd="@dimen/pad_20"
               android:layout_marginTop="@dimen/pad_20"
               android:layout_marginStart="@dimen/pad_20"
               />
           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white"
               android:layout_marginStart="@dimen/pad_20"
               android:layout_marginEnd="@dimen/pad_20">
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/pad_10"
                   android:layout_marginBottom="@dimen/pad_10"
                   android:paddingTop="@dimen/pad_10"
                   android:paddingBottom="@dimen/pad_10"
                   android:layout_marginEnd="@dimen/pad_10"
                   android:orientation="horizontal">
                   <androidx.appcompat.widget.AppCompatTextView
                       android:text="No HP: "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/opensans_regular"
                       android:textSize="@dimen/text_xs_16"/>
                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tv_no_hp"
                       android:text="0183213"
                       android:layout_width="match_parent"
                       android:gravity="end"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/opensans_regular"
                       android:textSize="@dimen/text_xs_16"/>
               </androidx.appcompat.widget.LinearLayoutCompat>
               <View
