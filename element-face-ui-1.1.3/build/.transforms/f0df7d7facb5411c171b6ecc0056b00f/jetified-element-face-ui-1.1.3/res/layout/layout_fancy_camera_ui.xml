<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/elementCameraRoot">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_element_camera" />

    <com.element.camera.FaceStencilView
        android:id="@+id/stencil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:completionIcon="@drawable/elementFaceUiOutlineCompletionMarker"
        app:stencilBackground="@color/elementFaceUiStencilBgColor"
        app:outlineColorNormal="@color/elementFaceUiOutlineNormalColor"
        app:outlineColorDetected="@color/elementFaceUiOutlineDetectedColor"
        app:outlineColorError="@color/elementFaceUiOutlineErrorColor"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        android:alpha="0"/>
</FrameLayout>