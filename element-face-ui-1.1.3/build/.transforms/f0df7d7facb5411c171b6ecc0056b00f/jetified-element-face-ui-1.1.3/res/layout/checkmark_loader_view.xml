<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp">

        <com.element.common.ui.PieView
            android:id="@+id/pie"
            android:layout_width="@dimen/checkmark_button_size"
            android:layout_height="@dimen/checkmark_button_size"
            android:layout_centerInParent="true"/>

        <com.element.common.ui.CheckmarkView
            android:id="@+id/check"
            android:layout_width="@dimen/checkmark_button_size"
            android:layout_height="@dimen/checkmark_button_size"
            android:layout_centerInParent="true"
            android:alpha="0"/>

        <com.element.checkLoader.FlowerView
            android:id="@+id/flower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.element.checkLoader.RingView
            android:id="@+id/ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</FrameLayout>