<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true" >

    <scale
        android:fromXScale="100%"
        android:fromYScale="100%"
        android:toXScale="125%"
